<!doctype html>

<html>
<head>
	<title>My Profile</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-switch.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="http://fonts.googleapis.com/css?family=Arvo" rel="stylesheet" type="text/css">
  	<link href="http://fonts.googleapis.com/css?family=PT+Sans" rel="stylesheet" type="text/css">
  	<link href="http://fonts.googleapis.com/css?family=Droid+Sans" rel="stylesheet" type="text/css">
	<link href="/css/gitfit.css" rel="stylesheet">
       
</head>

<body>
	{{> _navbar}}

	<div class="container">

		<div class="col-xs-12">
			<div class="img_wrapper">
				<img class="img" src={{imageURL}}></img>
			</div>
			
			<div class="center_div">

				<!-- Button trigger modal -->
				<button class="btn btn-custom" data-toggle="modal" data-target="#imgUpload"><span class="glyphicon glyphicon-camera"></span> Change Profile Picture</button>

				<!-- Modal -->
				<div class="modal fade" id="imgUpload">
					<div class="modal-dialog">
						<div class="modal-content">
							<div class="modal-header">
								<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
								<h4 class="modal-title">Change Profile Picture</h4>
							</div>
							<div class="modal-body">
								<div class="form-group">
					                <label>Image URL:</label>
					                <input type="text" class="form-control" id="changeImageURL" name="changeImageURL" value={{imageURL}}>
					            </div>
							</div>
							<div class="modal-footer">
								<button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
								<button type="button" class="btn btn-custom" id="changePicBtn">Save</button>
							</div>
						</div><!-- /.modal-content -->
					</div><!-- /.modal-dialog -->
				</div><!-- /.modal -->
				<br>
			</div>
			
			<a class="editIcon" href="#" data-toggle="modal" data-target="#editBasicInfo">
				<span class="glyphicon glyphicon-pencil"></span>
				Edit
			</a>

			<!-- Modal -->
			<div class="modal fade" id="editBasicInfo">
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-header">
							<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
							<h4 class="modal-title">Edit Basic Information</h4>
						</div>
						<div class="modal-body">
							<div class="form-group">
				                <label>First Name:</label>
				                <div class ="row">
				                    <div class = "col-md-12">
				                        <input type="text" class="form-control" id="editFirstname" name ="firstname" value={{firstname}}>
				                    </div>
				                </div>
				            </div>
				            <div class="form-group">
				                <label>Last Name:</label>
				                <div class="row">
				                    <div class = "col-md-12">
				                        <input type="text" class="form-control" id="editLastname" name="lastname" value={{lastname}}>
				                    </div>
				                </div>
				            </div>
				            <div class="form-group">
				                <label>Age:</label>
				                <input type="number" class="form-control" id="editAge" name="age" value={{age}}>
				            </div>
				            <div class="form-group">
				                <label>City:</label>
				                <div class ="row">
				                    <div class = "col-md-12">
				                        <input type="text" class="form-control" id="editCity" name=
				                        "city" value={{city}}>
				                    </div>
				                </div>
				            </div>
				            <div class="form-group">
				                <label>State:</label>
				                <div class="row">
				                    <div class = "col-md-12">
				                        <input type="text" class="form-control" id="editState" name="state" value={{state}}>
				                    </div>
				                </div>
				            </div>
				            <div class="form-group">
				                <label>Gym:</label>
				                <select class="form-control" id="editGym" name="gym">
				                    <option>Arrillaga East</option>
				                    <option>Arrillaga West</option>
				                </select>
				            </div>
				            <div class="form-group">
				                <label>About Me:</label>
				                <textarea class="form-control" rows="3" id="editAbout_me" name="about_me">{{about_me}}</textarea>
				            </div>
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
							<button type="button" class="btn btn-custom" id="editBasicInfoBtn">Save</button>
						</div>
					</div><!-- /.modal-content -->
				</div><!-- /.modal-dialog -->
			</div><!-- /.modal -->
                
            <h3 class="nameInfo">{{name}}, {{age}}</h3>
			<p class="profileInfo">
                {{gym}} Gym</br>
                {{location}}</br>
                {{about_me}}
            </p>

            <p>Looking for Gym Buddies?
            	{{#if looking}}
            		<input type="checkbox" name="lookingToggle" checked data-size="small" data-off-color="warning">
            	{{else}}
            		<input type="checkbox" name="lookingToggle" data-size="small" data-off-color="warning">
            	{{/if}}
            </p>
			
			
            <div class="row">
                <div class="panel panel-default">
                    <div class="panel-heading">
                    	<b>Activities</b>
                    	<a class="editIcon" href="#" data-toggle="modal" data-target="#editActivities">
							<span class="glyphicon glyphicon-pencil"></span>
							Edit
						</a>
                    </div>
                    <ul class="list-group">
                        {{#each activities}}
                        	<li class="list-group-item">{{this}}</li>
                        {{/each}}
                    </ul>
                </div>
            </div>

            <!-- Modal -->
			<div class="modal fade" id="editActivities">
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-header">
							<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
							<h4 class="modal-title">Edit Activities</h4>
						</div>
						<div class="modal-body">
							<div class="form-group">
				                <label>What exercises do you like to do?</label>
				                <div id = "checkbox">
				                    <label class="checkbox">
				                        <input type="checkbox" id="editBasketball" value="basketball">
				                        Basketball
				                    </label>
				                    <label class="checkbox">
				                        <input type="checkbox" id="editWeightlifting" value="weightlifting">
				                        Weight Lifting
				                    </label>
				                    <label class="checkbox">
				                        <input type="checkbox" id="editRunning" value="running">
				                        Running
				                    </label>
				                    <label class="checkbox">
				                        <input type="checkbox" id="editSwimming" value="swimming">
				                        Swimming
				                    </label>
				                    <label class="checkbox">
				                        <input type="checkbox" id="editClimbing" value="climbing">
				                        Climbing
				                    </label>
				                    <label class="checkbox">
				                        <input type="checkbox" id="editCycling" value="cycling">
				                        Cycling
				                    </label>
				                </div>
				            </div>
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
							<button type="button" class="btn btn-custom" id="editActivitiesBtn">Save</button>
						</div>
					</div><!-- /.modal-content -->
				</div><!-- /.modal-dialog -->
			</div><!-- /.modal -->
            <div class="row">
                <div class="panel panel-default">
                    <div class="panel-heading">
                    	<b>Availability</b>
                    	<a class="editIcon" href="#" data-toggle="modal" data-target="#editAvailability">
							<span class="glyphicon glyphicon-pencil"></span>
							Edit
						</a>
                    </div>
                    <div class="table-responsive">
			            <table class="table table-bordered">
			            	<tr>
			            		<th>Monday</th>
			                    <th>Tuesday</th>
			                    <th>Wednesday</th>
			                    <th>Thursday</th>
			                    <th>Friday</th>
			                    <th>Saturday</th>
			                    <th>Sunday</th>
			            	</tr>
			            	<tr>
			            		<td>
			            			{{#if availability.monday.morning}}
			            				<h5>Morning</h5>
			            			{{/if}}
			            			{{#if availability.monday.afternoon}}
			            				<h5>Afternoon</h5>
			            			{{/if}}
			            			{{#if availability.monday.evening}}
			            				<h5>Evening</h5>
			            			{{/if}}
			            		</td>
			            		<td>
			            			{{#if availability.tuesday.morning}}
			            				<h5>Morning</h5>
			            			{{/if}}
			            			{{#if availability.tuesday.afternoon}}
			            				<h5>Afternoon</h5>
			            			{{/if}}
			            			{{#if availability.tuesday.evening}}
			            				<h5>Evening</h5>
			            			{{/if}}
			            		</td>
			            		<td>
			            			{{#if availability.wednesday.morning}}
			            				<h5>Morning</h5>
			            			{{/if}}
			            			{{#if availability.wednesday.afternoon}}
			            				<h5>Afternoon</h5>
			            			{{/if}}
			            			{{#if availability.wednesday.evening}}
			            				<h5>Evening</h5>
			            			{{/if}}
			            		</td>
			            		<td>
			            			{{#if availability.thursday.morning}}
			            				<h5>Morning</h5>
			            			{{/if}}
			            			{{#if availability.thursday.afternoon}}
			            				<h5>Afternoon</h5>
			            			{{/if}}
			            			{{#if availability.thursday.evening}}
			            				<h5>Evening</h5>
			            			{{/if}}
			            		</td>
			            		<td>
			            			{{#if availability.friday.morning}}
			            				<h5>Morning</h5>
			            			{{/if}}
			            			{{#if availability.friday.afternoon}}
			            				<h5>Afternoon</h5>
			            			{{/if}}
			            			{{#if availability.friday.evening}}
			            				<h5>Evening</h5>
			            			{{/if}}
			            		</td>
			            		<td>
			            			{{#if availability.saturday.morning}}
			            				<h5>Morning</h5>
			            			{{/if}}
			            			{{#if availability.saturday.afternoon}}
			            				<h5>Afternoon</h5>
			            			{{/if}}
			            			{{#if availability.saturday.evening}}
			            				<h5>Evening</h5>
			            			{{/if}}
			            		</td>
			            		<td>
			            			{{#if availability.sunday.morning}}
			            				<h5>Morning</h5>
			            			{{/if}}
			            			{{#if availability.sunday.afternoon}}
			            				<h5>Afternoon</h5>
			            			{{/if}}
			            			{{#if availability.sunday.evening}}
			            				<h5>Evening</h5>
			            			{{/if}}
			            		</td>
			            	</tr>
			            </table>
					</div>      
                </div>
            </div>

            <!-- Modal -->
			<div class="modal fade" id="editAvailability">
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-header">
							<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
							<h4 class="modal-title">Change Availability</h4>
						</div>
						<div class="modal-body">
							<div class="form-group">
				                <label>When do you like to exercise? These preferences will help us find you buddies, so mark all the times you're free!</label>
				                <ul>
				                    <li><div class="monday">
				                        <h5>Monday</h5>
				                        <label class="checkbox">
				                            <input type="checkbox" id="editmonday-morning">
				                            Morning
				                        </label>
				                        <label class="checkbox">
				                            <input type="checkbox" id="editmonday-afternoon">
				                            Afternoon
				                        </label>
				                        <label class="checkbox">
				                            <input type="checkbox" id="editmonday-evening">
				                            Evening
				                        </label>
				                    </div></li>
				                    <div class="tuesday">
				                        <li><h5>Tuesday</h5>
				                        <label class="checkbox">
				                            <input type="checkbox" id="edittuesday-morning">
				                            Morning
				                        </label>
				                        <label class="checkbox">
				                            <input type="checkbox" id="edittuesday-afternoon">
				                            Afternoon
				                        </label>
				                        <label class="checkbox">
				                            <input type="checkbox" id="edittuesday-evening">
				                            Evening
				                        </label>
				                    </div></li>
				                    <div class="wednesday">
				                        <li><h5>Wednesday</h5>
				                        <label class="checkbox">
				                            <input type="checkbox" id="editwednesday-morning">
				                            Morning
				                        </label>
				                        <label class="checkbox">
				                            <input type="checkbox" id="editwednesday-afternoon">
				                            Afternoon
				                        </label>
				                        <label class="checkbox">
				                            <input type="checkbox" id="editwednesday-evening">
				                            Evening
				                        </label>
				                    </div></li>
				                    <div class="thursday">
				                        <li><h5>Thursday</h5>
				                        <label class="checkbox">
				                            <input type="checkbox" id="editthursday-morning">
				                            Morning
				                        </label>
				                        <label class="checkbox">
				                            <input type="checkbox" id="editthursday-afternoon">
				                            Afternoon
				                        </label>
				                        <label class="checkbox">
				                            <input type="checkbox" id="editthursday-evening">
				                            Evening
				                        </label>
				                    </div></li>
				                    <div class="friday">
				                        <li><h5>Friday</h5>
				                        <label class="checkbox">
				                            <input type="checkbox" id="editfriday-morning">
				                            Morning
				                        </label>
				                        <label class="checkbox">
				                            <input type="checkbox" id="editfriday-afternoon">
				                            Afternoon
				                        </label>
				                        <label class="checkbox">
				                            <input type="checkbox" id="editfriday-evening">
				                            Evening
				                        </label>
				                    </div></li>
				                    <div class="saturday">
				                        <li><h5>Saturday</h5>
				                        <label class="checkbox">
				                            <input type="checkbox" id="editsaturday-morning">
				                            Morning
				                        </label>
				                        <label class="checkbox">
				                            <input type="checkbox" id="editsaturday-afternoon">
				                            Afternoon
				                        </label>
				                        <label class="checkbox">
				                            <input type="checkbox" id="editsaturday-evening">
				                            Evening
				                        </label>
				                    </div></li>
				                    <div class="sunday">
				                        <li><h5>Sunday</h5>
				                        <label class="checkbox">
				                            <input type="checkbox" id="editsunday-morning">
				                            Morning
				                        </label>
				                        <label class="checkbox">
				                            <input type="checkbox" id="editsunday-afternoon">
				                            Afternoon
				                        </label>
				                        <label class="checkbox">
				                            <input type="checkbox" id="editsunday-evening">
				                            Evening
				                        </label>
				                    </div></li>
				                </li>
				            </div>
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
							<button type="button" class="btn btn-custom" id="editAvailabilityBtn">Save</button>
						</div>
					</div><!-- /.modal-content -->
				</div><!-- /.modal-dialog -->
			</div><!-- /.modal -->

		</div>
	</div>

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script src="/js/bootstrap-switch.min.js"></script>
	<script src="/js/gitfit.js"></script>
	<script>
