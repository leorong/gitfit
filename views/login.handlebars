<!doctype html>

<html>
<head>
	<title>Gym Match</title>
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/gym_match.css" rel="stylesheet">
</head>


<body>
<!-- 	{{#if failureFlash}}
		<p>{{failureFlash}}</p>
	{{/if}} -->
	<div class="main">
		<div class="row">
			<div class="container">
				{{#if message}}
					<div class="warning-message">
						<button class="close" data-dismiss"warning">&times;</button>
						<p class="no-margin">{{message}}<p>
					</div>
				{{/if}}
				<form class="form-signin" method="post" action="/login">
					<h3>Login to GymMatch</h3>
					<div class="form-group">
						<input type="text" class="form-control login" id="username" name="username" placeholder="Username" autofous>
					</div>
					<div class="form-group">
						<input type="password" class="form-control login" id="password" name="password" placeholder="Password">
					</div>
					<div class="forgot">
						<div class="row">
							<div class="col-xs-8 col-md-8">
								<a href="#">Forgot your password?</a>
								<a href="/signup">Sign up now!</a>
							</div>
						</div>
					</div>

					<div class="loginBtns">
						<div class="row">
							<div class="col-sm-12 col-md-12">
								<button value="submit" class="btn btn-primary btn-block" value="Login">Login</button>
							</div>
						</div>
						<hr width="100%">
						<div class="row">
							<div class="col-sm-12 col-md-12">
								<a href="#" class="btn btn-primary btn-block">
								<span class="glyphicon glyphicon-user"></span>Login with Facebook</a>
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div> 

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
</body>



</html>