<!doctype html>

<html>
<head>
	<title>Login to GitFit</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="http://fonts.googleapis.com/css?family=Arvo" rel="stylesheet" type="text/css">
  <link href="http://fonts.googleapis.com/css?family=PT+Sans" rel="stylesheet" type="text/css">
  <link href="http://fonts.googleapis.com/css?family=Droid+Sans" rel="stylesheet" type="text/css">
	<link href="/css/gitfit.css" rel="stylesheet">
	<style>
		body { 
			background-image: url('/images/background.jpg'); 
			background-repeat: no-repeat;
			background-position: center;
			background-attachment: fixed;
			background-size: cover;
			padding-bottom: 60px;
		}
	</style>
</head>


<body>

	<div class="container">
		{{#if message}}
			<div class="warning-message">
				<p class="no-margin">{{message}}<p>
			</div>
		{{/if}}
		<form class="form-signin" role="form" method="post" action="/login">
			<h3>Login to GitFit</h3>
			<div class="form-group">
				<input type="text" class="form-control login" id="username" name="username" value="{{username}}" placeholder="Username" autocapitalize="off">
			</div>
			<div class="form-group">
				<input type="password" class="form-control login" id="password" name="password" placeholder="Password" autocapitalize="off">
			</div>
				<a href="/signup">New to GitFit? Sign up now!</a>
				<button value="submit" class="btn btn-custom btn-block" value="Login">Login</input>
		</form>
	</div>


	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script>
