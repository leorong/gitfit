<!doctype html>

<html>
<head>
	<title>Find a Gym Buddy</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
	<link href="/css/bootstrap.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.css" rel="stylesheet">
    <link href="http://fonts.googleapis.com/css?family=Arvo" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=PT+Sans" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=Droid+Sans" rel="stylesheet" type="text/css">
    <link href="/css/gitfit.css" rel="stylesheet">
</head>

<body>

	{{> _navbar}}

	<div class="container">
		<h1>Find a Buddy</h1>
        <p>Check out the matches we found! Time to GitFit!</p>
        <div class="panel-group" id="accordion">
            <div class="panel panel-default searchbox">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">Tap to Edit Search</a>
                    <h3>
                </div>
                <div id="collapseOne" class="panel-collapse collapse">
                    <div class="panel-body">
                        <form id="new-message-form" role="form">
                            <div class="form-group">
                                <label>Gym:</label>
                                <select class="form-control" id="gym" name="gym">
                                    <option>Arrillaga East</option>
                                    <option>Arrillaga West</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>What exercises do you like to do?</label>
                                <div id = "checkbox">
                                    <label class="checkbox">
                                        <input type="checkbox" id="basketball" value="basketball">
                                        Basketball
                                    </label>
                                    <label class="checkbox">
                                        <input type="checkbox" id="weightlifting" value="weightlifting">
                                        Weight Lifting
                                    </label>
                                    <label class="checkbox">
                                        <input type="checkbox" id="running" value="running">
                                        Running
                                    </label>
                                    <label class="checkbox">
                                        <input type="checkbox" id="swimming" value="swimming">
                                        Swimming
                                    </label>
                                    <label class="checkbox">
                                        <input type="checkbox" id="climbing" value="climbing">
                                        Climbing
                                    </label>
                                    <label class="checkbox">
                                        <input type="checkbox" id="cycling" value="cycling">
                                        Cycling
                                    </label>
                                </div>
                            </div>
                            <button id="searchBuddiesBtn" type="button" class="btn btn-primary">Search</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="matches" id="{{buddy.username}}">
 		    {{#each buddies}}	
            <div>
                <a href="profile/{{buddy.username}}"><h3 id="name">{{buddy.name.full}}</h3></a>
                <a href="profile/{{buddy.username}}" class='thumbnail'><img src="{{buddy.imageURL}}" id="{{buddy.imageURL}}"></img></a>
                <p><font color="ff6600"><b>Match Score:</b></font> {{score}}</font>.</p>
                <p><font color="ff6600"><b>Age:</b></font> {{buddy.age}}</p>
                <p><font color="ff6600"><b>Gym:</b></font> {{buddy.gym}}</p>
                <p><font color="ff6600"><b>Profile:</b></font> {{buddy.about_me}}</p>

                <div class="addButton" id="add{{buddy.username}}">
                {{#unless isFriend}}
                <div class='buttonDiv'><a type="button" class="btn btn-primary">Add Buddy</a></div>
                {{/unless}}
                </div>
                <hr width="100%"></hr>
            </div>
            {{/each}}
        </div>
		
	</div>

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
    <script src="/bootstrap/js/alert.js"></script>
    <script src="/js/gitfit.js"></script>
