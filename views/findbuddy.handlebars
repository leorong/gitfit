<!doctype html>

<html>
	<head>
		<title>Find a Gym Buddy</title>	
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
		<link href="/css/bootstrap.css" rel="stylesheet">
		<link href="/css/bootstrap-theme.css" rel="stylesheet">
		<link href="/css/gitfit.css" rel="stylesheet">
	</head>

	<body>

		{{> _navbar}}

		<div class="container">
			<h1 position:"center">Find a Buddy</h1>
			<p>Check out the matches we found! Time to GitFit!</p>
			{{#each buddies}}	
			<div class="matches" id="{{buddy.username}}">
				<div class="col-xs-12">
					<a href="profile/{{buddy.username}}"><h3 id="name">{{buddy.name.full}}</h3></a>
					<a href="profile/{{buddy.username}}" class='thumbnail'><img src="{{buddy.imageURL}}" id="{{buddy.imageURL}}"></img></a>
					<p><font color="ff6600"><b>Match Score:</b></font> {{score}}</font>.</p>
				<p><font color="ff6600"><b>Age:</b></font> {{buddy.age}}</p>
				<p><font color="ff6600"><b>Gym:</b></font> {{buddy.gym}}</p>
				<p><font color="ff6600"><b>Profile:</b></font> {{buddy.about_me}}</p>
				<div class="addButton" id="add{{buddy.username}}">
					{{#unless isFriend}}
					<div class='buttonDiv'><button type="button" id="{{buddy.username}}" href="/findbuddy/add/{{buddy.username}}" data-toggle="modal" data-target="#myOptionsModal{{buddy.username}}" class="addBuddyBtn btn btn-primary">Add Buddy</button></div>
					{{/unless}}
				</div>
				<hr width="100%"></hr>
			</div>

			<!-- After Adding Modal -->
			<div class="modal fade" id="myOptionsModal{{buddy.username}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-header">
							<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
							<h4 class="modal-title" id="myModalLabel">Buddy Added!</h4>
						</div>
						<div class="modal-body">
							What would you like to do next?
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Close</button>
							<button type="button" class="btn btn-primary btn-sm" href="profile/{{buddy.username}}">Visit Profile</button>
							<button type="button" class="btn btn-primary btn-sm" data-dismiss="modal" data-toggle="modal" data-target="#messageBuddyModal{{buddy.username}}">Message</button>
						</div>
					</div>
				</div>
			</div>

			<!-- Message User Model -->
			<div class="modal fade" id="messageBuddyModal{{buddy.username}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-header">
							<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
							<h4 class="modal-title" id="myModalLabel">Message Buddy</h4>
						</div>
						<div class="modal-body">
							<div class="new-message-form">
								<form id="new-message-formid-{{buddy.username}}" role="form">
									<div class="form-group">
										<label for="to">To:</label>
										<input type="text" class="form-control" id="to" value="{{buddy.username}}" disabled>
									</div>
									<div class="form-group">
										<label for="messageSubject">Subject:</label>
										<input type="text" class="form-control" id="messageSubject">
										<label for="messageContent">Message:</label>
										<textarea type="text" class="form-control" rows="3" id="messageContent"></textarea>
									</div>
								</form>
							</div>
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
							<button type="button" class="btn btn-primary newMessageSubmitBtn" id="{{buddy.username}}">Send</button>
						</div>
					</div>
				</div>
			</div>

        </div>
        {{/each}}
	</div>

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
    <script src="/bootstrap/js/alert.js"></script>
    <script src="/js/gitfit.js"></script>
