<!doctype html>

<html>
<head>

    <title>Profile Setup</title>    
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/bootstrap-theme.css" rel="stylesheet">
    <link href="http://fonts.googleapis.com/css?family=Arvo" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=PT+Sans" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=Droid+Sans" rel="stylesheet" type="text/css">
    <link href="/css/gitfit.css" rel="stylesheet">       
</head>

<body>
    <div class="container">
        {{#if message}}
            <div class="warning-message">
                <p class="no-margin">{{message}}<p>
            </div>
        {{/if}}
        <form class="profile_setup" role="form" method="post" action="/addgymandactivities">
            <h3>Profile - Gym and Activities</h3>
            <br>
            <div class="form-group">
                <label>Gym:</label>
                <select class="form-control" id="gym" name="gym" value="{{gym}}" required>
                    <option>Arrillaga East</option>
                    <option>Arrillaga West</option>
                </select>
            </div>
            <div class="form-group">
                <label>What exercises do you like to do?</label>
                <div id = "checkbox">
                    <label class="checkbox">
                        <input type="checkbox" name="activity" id="basketball" value="basketball">
                        Basketball
                    </label>
                    <label class="checkbox">
                        <input type="checkbox" name="activity" id="weightlifting" value="weightlifting">
                        Weight Lifting
                    </label>
                    <label class="checkbox">
                        <input type="checkbox" name="activity" id="running" value="running">
                        Running
                    </label>
                    <label class="checkbox">
                        <input type="checkbox" name="activity" id="swimming" value="swimming">
                        Swimming
                    </label>
                    <label class="checkbox">
                        <input type="checkbox" name="activity" id="climbing" value="climbing">
                        Climbing
                    </label>
                    <label class="checkbox">
                        <input type="checkbox" name="activity" id="cycling" value="cycling">
                        Cycling
                    </label>
                </div>
            </div>          
            <div class="form-group">
                <button type="submit" value="Submit" class="btn btn-custom" id="addgymandactivities">Next</button>
            </div>
        </form>

    </div>
    <script src="/js/jquery-1.11.0.js"></script>
    <script src="js/bootstrap.js"></script>
    <script src="/js/gitfit.js"></script>
