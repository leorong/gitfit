<!doctype html>

<html>
<head>
	<title>My Profile</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="https://cdnjs.cloudflare.com/ajax/libs/x-editable/1.5.0/bootstrap3-editable/css/bootstrap-editable.css" rel="stylesheet"/>
	<link href="/css/gitfit.css" rel="stylesheet">
       
</head>

<body>

	{{> _navbar}}

	<div class="container">
		<div class="profile">
			<div class="col-xs-12">
                <h2>{{name}}</h2>
				<a href="#" class="thumbnail">
					<img class="img" src={{imageURL}}></img>
				</a>
                <a type="button" class="btn btn-primary" href="/message/reply/{{username}}">Message</a>
                <div>
					<p>Looking for a friend:
						<input disabled type="checkbox" name="find_friend_toggle" class="switch-small" checked data-animated="false">
					</p>
				</div>
				<h4>{{location}}</h4>
				<h4>Gym: {{gym}}</h4>
				<h4>Age: {{age}}</h4>
				<h4>About Me:</h4>
				<h5>{{about_me}}</h5>
				<div class="activities">
                    <div class="row">
                        <div class="panel panel-default">
                            <div class="panel-heading">{{name}}'s Activities</div>
                            <ul class="list-group">
                                {{#each activities}}
                                	<li class="list-group-item">{{this}}</li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                </div>
                <h4>Availability</h4>
                <div class="table-responsive">
		            <table class="table table-bordered">
		            	<tr>
		            		<th>Monday</th>
		                    <th>Tuesday</th>
		                    <th>Wednesday</th>
		                    <th>Thursday</th>
		                    <th>Friday</th>
		                    <th>Saturday</th>
		                    <th>Sunday</th>
		            	</tr>
		            	<tr>
		            		<td>
		            			{{#if availability.monday.morning}}
		            				<h5>Morning</h5>
		            			{{/if}}
		            			{{#if availability.monday.afternoon}}
		            				<h5>Afternoon</h5>
		            			{{/if}}
		            			{{#if availability.monday.evening}}
		            				<h5>Evening</h5>
		            			{{/if}}
		            		</td>
		            		<td>
		            			{{#if availability.tuesday.morning}}
		            				<h5>Morning</h5>
		            			{{/if}}
		            			{{#if availability.tuesday.afternoon}}
		            				<h5>Afternoon</h5>
		            			{{/if}}
		            			{{#if availability.tuesday.evening}}
		            				<h5>Evening</h5>
		            			{{/if}}
		            		</td>
		            		<td>
		            			{{#if availability.wednesday.morning}}
		            				<h5>Morning</h5>
		            			{{/if}}
		            			{{#if availability.wednesday.afternoon}}
		            				<h5>Afternoon</h5>
		            			{{/if}}
		            			{{#if availability.wednesday.evening}}
		            				<h5>Evening</h5>
		            			{{/if}}
		            		</td>
		            		<td>
		            			{{#if availability.thursday.morning}}
		            				<h5>Morning</h5>
		            			{{/if}}
		            			{{#if availability.thursday.afternoon}}
		            				<h5>Afternoon</h5>
		            			{{/if}}
		            			{{#if availability.thursday.evening}}
		            				<h5>Evening</h5>
		            			{{/if}}
		            		</td>
		            		<td>
		            			{{#if availability.friday.morning}}
		            				<h5>Morning</h5>
		            			{{/if}}
		            			{{#if availability.friday.afternoon}}
		            				<h5>Afternoon</h5>
		            			{{/if}}
		            			{{#if availability.friday.evening}}
		            				<h5>Evening</h5>
		            			{{/if}}
		            		</td>
		            		<td>
		            			{{#if availability.saturday.morning}}
		            				<h5>Morning</h5>
		            			{{/if}}
		            			{{#if availability.saturday.afternoon}}
		            				<h5>Afternoon</h5>
		            			{{/if}}
		            			{{#if availability.saturday.evening}}
		            				<h5>Evening</h5>
		            			{{/if}}
		            		</td>
		            		<td>
		            			{{#if availability.sunday.morning}}
		            				<h5>Morning</h5>
		            			{{/if}}
		            			{{#if availability.sunday.afternoon}}
		            				<h5>Afternoon</h5>
		            			{{/if}}
		            			{{#if availability.sunday.evening}}
		            				<h5>Evening</h5>
		            			{{/if}}
		            		</td>
		            	</tr>
		            </table>
				</div>
                <h4>Schedule</h4>
                <div class="table-responsive">
		            <table class="table table-bordered">
		            	<tr>
		            		<th>Monday</th>
		                    <th>Tuesday</th>
		                    <th>Wednesday</th>
		                    <th>Thursday</th>
		                    <th>Friday</th>
		                    <th>Saturday</th>
		                    <th>Sunday</th>
		            	</tr>
		            	<tr>
		            		<td>
		            			{{#each schedule.monday}}
									<h5>{{activity}}</h5>
									<h6>{{startTime}}</h6>
									to
									<h6>{{endTime}}</h6>
									<hr>
								{{/each}}
		            		</td>
		            		<td>
		            			{{#each schedule.tuesday}}
									<h5>{{activity}}</h5>
									<h6>{{startTime}}</h6>
									to
									<h6>{{endTime}}</h6>
									<hr>
								{{/each}}
		            		</td>
		            		<td>
		            			{{#each schedule.wednesday}}
									<h5>{{activity}}</h5>
									<h6>{{startTime}}</h6>
									to
									<h6>{{endTime}}</h6>
									<hr>
								{{/each}}
		            		</td>
		            		<td>
		            			{{#each schedule.thursday}}
									<h5>{{activity}}</h5>
									<h6>{{startTime}}</h6>
									to
									<h6>{{endTime}}</h6>
									<hr>
								{{/each}}
		            		</td>
		            		<td>
		            			{{#each schedule.friday}}
									<h5>{{activity}}</h5>
									<h6>{{startTime}}</h6>
									to
									<h6>{{endTime}}</h6>
									<hr>
								{{/each}}
		            		</td>
		            		<td>
		            			{{#each schedule.saturday}}
									<h5>{{activity}}</h5>
									<h6>{{startTime}}</h6>
									to
									<h6>{{endTime}}</h6>
									<hr>
								{{/each}}
		            		</td>
		            		<td>
		            			{{#each schedule.sunday}}
									<h5>{{activity}}</h5>
									<h6>{{startTime}}</h6>
									to
									<h6>{{endTime}}</h6>
									<hr>
								{{/each}}
		            		</td>
		            	</tr>
		            </table>
				</div>
			</div>
		</div>
	</div>

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/x-editable/1.5.0/bootstrap3-editable/js/bootstrap-editable.min.js"></script>
	<script src="/js/gitfit.js"></script>
