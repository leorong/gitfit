<!doctype html>

<html>
<head>
	<title>My Profile</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/gym_match.css" rel="stylesheet">
	<!-- this is a comment in HTML -->

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->        
</head>

<body>

	{{> _navbar}}

	<div class="container">
		<h3>{{name}}'s Profile</h3>

		<div class="profile">
			<div class="col-xs-4 col-md-4" >
				<a href="#" class="thumbnail">
					<img class="img" src="{{imageURL}}"></img>
				</a>

				<div class="looking-for-friend" style="margin:0; auto;">
					{{#if looking}}
						<button type="button" class="btn btn-primary"><span class="glyphicon glyphicon-plus">Friend</span></button>	
					{{else}}
						<button type="button" class="btn btn-primary" disabled><span class="glyphicon glyphicon-plus">Friend</span></button>	
					{{/if}}
				</div>
			</div>
			<div class="col-xs-8 col-md-8">
				<p><i>{{location}}</i></p>
				<p>Gym: {{gym}}</p>
				<p>Age: {{age}}</p>
				<div class="about-me">
					<p>{{about_me}}</p>
				</div>
				<div class="activities">
					<div class="row">
					<div class="panel panel-default">
						<!-- Default panel contents -->
						<div class="panel-heading">{{name}}'s Activities</div>
						<!-- List group -->
						<ul class="list-group">
						{{#each activities}}
							<li class="list-group-item">{{this}}</li>
						{{/each}}
						</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
</body>
</html>
