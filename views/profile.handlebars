<!doctype html>

<html>
<head>
	<title>My Profile</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="https://cdnjs.cloudflare.com/ajax/libs/x-editable/1.5.0/bootstrap3-editable/css/bootstrap-editable.css" rel="stylesheet"/>
    <link href="http://fonts.googleapis.com/css?family=Arvo" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=PT+Sans" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=Droid+Sans" rel="stylesheet" type="text/css">
	<link href="/css/gitfit.css" rel="stylesheet">
       
</head>

<body>

	{{> _navbar}}

	<div class="container">

			<div class="col-xs-12">
                
				<div class="img_wrapper">
					<img class="img" src={{imageURL}}></img>
				</div>

                <div class="userInfo">
                    <h3 class="nameInfo">{{name}}, {{age}}</h3>
                    <p class="profileInfo">
                        {{gym}} Gym</br>
                        {{location}}</br>
                        {{about_me}}
                    </p>
                </div>
                <div>
                    <p>Looking for a friend:
                        <input disabled type="checkbox" name="find_friend_toggle" class="switch-small" checked data-animated="false">
                    </p>
                </div>
                <a type="button" class="btn btn-custom" data-toggle="modal" data-target="#messageBuddyModal{{username}}">Message</a>
				{{#if isFriend}}
					<a href="/buddylist/remove/{{username}}" type="button" class="btn btn-custom btn-sm" id="unfriendBtn"><span class="glyphicon glyphicon-minus"></span>Unfriend</a>
				{{else}}
					<div class='buttonDiv'><a type="button" id="{{username}}" href="/findbuddy/add/{{username}}" data-toggle="modal" data-target="#myOptionsModal{{username}}" class="addBuddyBtn btn btn-custom">Add Buddy</a></div>
				{{/if}}
				
				<!-- Modal -->
				<div class="modal fade" id="myOptionsModal{{username}}" tabindex="-1"  role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
					<div class="modal-dialog">
						<div class="modal-content">
							<div class="modal-header">
								<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
								<h4 class="modal-title" id="myModalLabel">Buddy Added!</h4>
							</div>
							<div class="modal-body">
								What would you like to do next?
							</div>
							<div class="modal-footer">
								<a type="button" class="btn btn-custom btn-sm" href="profile/{{username}}">Visit Profile</a>
								<button type="button" class="btn btn-custom btn-sm" data-    toggle="modal" data-target="#messageBuddyModal{{username}}">Message</button>
								<button type="button" class="btn btn-default btn-sm" data-   dismiss="modal">Close</button>
							</div>
						</div>
					</div>
				</div>

				<!-- Message User Model -->
                <div class="modal fade" id="messageBuddyModal{{username}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                <h4 class="modal-title" id="myModalLabel">Message Buddy</h4>
                            </div>
                            <div class="modal-body">
                                <div class="new-message-form">
                                    <form id="new-message-formid-{{username}}" role="form">
                                        <div class="form-group">
                                            <label for="to">To:</label>
                                            <input type="text" class="form-control" id="to" value="{{username}}" disabled>
                                        </div>
                                        <div class="form-group">
                                            <label for="messageSubject">Subject:</label>
                                            <input type="text" class="form-control" id="messageSubject">
                                            <label for="messageContent">Message:</label>
                                            <textarea type="text" class="form-control" rows="3" id="messageContent"></textarea>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                <button type="button" class="btn btn-custom newMessageSubmitBtn" id="{{username}}">Send</button>
                            </div>
                        </div>
                    </div>
                </div>
				
				<div class="activities">
                    <div class="row">
                        <div class="panel panel-default">
                            <div class="panel-heading">{{name}}'s Activities</div>
                            <ul class="list-group">
                                {{#each activities}}
                          	        <li class="list-group-item">{{this}}</li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                </div>
                <h4>Availability</h4>
                <div class="table-responsive">
		            <table class="table table-bordered">
		            	<tr>
		            		<th>Monday</th>
		                    <th>Tuesday</th>
		                    <th>Wednesday</th>
		                    <th>Thursday</th>
		                    <th>Friday</th>
		                    <th>Saturday</th>
		                    <th>Sunday</th>
		            	</tr>
		            	<tr>
		            		<td>
		            			{{#if availability.monday.morning}}
		            				<h5>Morning</h5>
		            			{{/if}}
		            			{{#if availability.monday.afternoon}}
		            				<h5>Afternoon</h5>
		            			{{/if}}
		            			{{#if availability.monday.evening}}
		            				<h5>Evening</h5>
		            			{{/if}}
		            		</td>
		            		<td>
		            			{{#if availability.tuesday.morning}}
		            				<h5>Morning</h5>
		            			{{/if}}
		            			{{#if availability.tuesday.afternoon}}
		            				<h5>Afternoon</h5>
		            			{{/if}}
		            			{{#if availability.tuesday.evening}}
		            				<h5>Evening</h5>
		            			{{/if}}
		            		</td>
		            		<td>
		            			{{#if availability.wednesday.morning}}
		            				<h5>Morning</h5>
		            			{{/if}}
		            			{{#if availability.wednesday.afternoon}}
		            				<h5>Afternoon</h5>
		            			{{/if}}
		            			{{#if availability.wednesday.evening}}
		            				<h5>Evening</h5>
		            			{{/if}}
		            		</td>
		            		<td>
		            			{{#if availability.thursday.morning}}
		            				<h5>Morning</h5>
		            			{{/if}}
		            			{{#if availability.thursday.afternoon}}
		            				<h5>Afternoon</h5>
		            			{{/if}}
		            			{{#if availability.thursday.evening}}
		            				<h5>Evening</h5>
		            			{{/if}}
		            		</td>
		            		<td>
		            			{{#if availability.friday.morning}}
		            				<h5>Morning</h5>
		            			{{/if}}
		            			{{#if availability.friday.afternoon}}
		            				<h5>Afternoon</h5>
		            			{{/if}}
		            			{{#if availability.friday.evening}}
		            				<h5>Evening</h5>
		            			{{/if}}
		            		</td>
		            		<td>
		            			{{#if availability.saturday.morning}}
		            				<h5>Morning</h5>
		            			{{/if}}
		            			{{#if availability.saturday.afternoon}}
		            				<h5>Afternoon</h5>
		            			{{/if}}
		            			{{#if availability.saturday.evening}}
		            				<h5>Evening</h5>
		            			{{/if}}
		            		</td>
		            		<td>
		            			{{#if availability.sunday.morning}}
		            				<h5>Morning</h5>
		            			{{/if}}
		            			{{#if availability.sunday.afternoon}}
		            				<h5>Afternoon</h5>
		            			{{/if}}
		            			{{#if availability.sunday.evening}}
		            				<h5>Evening</h5>
		            			{{/if}}
		            		</td>
		            	</tr>
		            </table>
				</div>
                <h4>Schedule</h4>
                <div class="table-responsive">
		            <table class="table table-bordered">
		            	<tr>
		            		<th>Monday</th>
		                    <th>Tuesday</th>
		                    <th>Wednesday</th>
		                    <th>Thursday</th>
		                    <th>Friday</th>
		                    <th>Saturday</th>
		                    <th>Sunday</th>
		            	</tr>
		            	<tr>
		            		<td>
		            			{{#each schedule.monday}}
									<h5>{{activity}}</h5>
									<h6>{{startTime}}</h6>
									to
									<h6>{{endTime}}</h6>
									<hr>
								{{/each}}
		            		</td>
		            		<td>
		            			{{#each schedule.tuesday}}
									<h5>{{activity}}</h5>
									<h6>{{startTime}}</h6>
									to
									<h6>{{endTime}}</h6>
									<hr>
								{{/each}}
		            		</td>
		            		<td>
		            			{{#each schedule.wednesday}}
									<h5>{{activity}}</h5>
									<h6>{{startTime}}</h6>
									to
									<h6>{{endTime}}</h6>
									<hr>
								{{/each}}
		            		</td>
		            		<td>
		            			{{#each schedule.thursday}}
									<h5>{{activity}}</h5>
									<h6>{{startTime}}</h6>
									to
									<h6>{{endTime}}</h6>
									<hr>
								{{/each}}
		            		</td>
		            		<td>
		            			{{#each schedule.friday}}
									<h5>{{activity}}</h5>
									<h6>{{startTime}}</h6>
									to
									<h6>{{endTime}}</h6>
									<hr>
								{{/each}}
		            		</td>
		            		<td>
		            			{{#each schedule.saturday}}
									<h5>{{activity}}</h5>
									<h6>{{startTime}}</h6>
									to
									<h6>{{endTime}}</h6>
									<hr>
								{{/each}}
		            		</td>
		            		<td>
		            			{{#each schedule.sunday}}
									<h5>{{activity}}</h5>
									<h6>{{startTime}}</h6>
									to
									<h6>{{endTime}}</h6>
									<hr>
								{{/each}}
		            		</td>
		            	</tr>
		            </table>
				</div>
			</div>
	</div>

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/x-editable/1.5.0/bootstrap3-editable/js/bootstrap-editable.min.js"></script>
