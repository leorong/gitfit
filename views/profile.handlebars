<!doctype html>

<html>
<head>
	<title>My Profile</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="https://cdnjs.cloudflare.com/ajax/libs/x-editable/1.5.0/bootstrap3-editable/css/bootstrap-editable.css" rel="stylesheet"/>
	<link href="/css/gitfit.css" rel="stylesheet">
       
</head>

<body>

	{{> _navbar}}

	<div class="container">
        <h1>{{name}}'s Profile</h1>

		<div class="profile">
			<div class="col-xs-4">
				<a href="#" class="thumbnail">
					<img class="img" src={{imageURL}}></img>
				</a>
			</div>
			<div class="col-xs-8">
                <h2>{{name}}</h2>
				<div>
					<p>Looking for a friend:
					<input disabled type="checkbox" name="find_friend_toggle" class="switch-small" checked data-animated="false">
					</p>
				</div>
				<h3>{{location}}</h3>
				<h4>Age: {{age}}</h4>
				<h4>About Me:</h4>
				<p>{{about_me}}</p>
				<div class="activities">
                    <div class="row">
                        <div class="panel panel-default">
                            <div class="panel-heading">{{name}}'s Activities</div>
                            <ul class="list-group">
                                {{#each activities}}
                                	<li class="list-group-item">{{this}}</li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                </div>
			</div>
		</div>
	</div>

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/x-editable/1.5.0/bootstrap3-editable/js/bootstrap-editable.min.js"></script>
	<script src="/js/gitfit.js"></script>
</body>
</html>
