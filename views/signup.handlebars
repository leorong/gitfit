<!doctype html>

<html>
<head>
	<title>Register</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/gitfit.css" rel="stylesheet">
</head>


<body>
	<div class="container">
		{{#if message}}
			<div class="warning-message">
				<button class="close" data-dismiss"warning">&times;</button>
				<p class="no-margin">{{message}}<p>
			</div>
		{{/if}}
		<form class="form-register">
			<h3 class="heading-desc" align="center">Register</h3>
			<br>
			<div class="form-group">
				<input type="text" class="form-control signup" id="username" placeholder="Username" autofous>
			</div>
			<div class="form-group">
				<input type="email" class="form-control signup" id="email" placeholder="Email">
			</div>
			<div class="form-group">
				<input type="password" class="form-control signup" id="password" placeholder="Password" autofous>
			</div>
			<div class="form-group">
				<input type="password" class="form-control signup" id="re-password" placeholder="Confirm Password" autofous>
			</div>
			

			<div class="signupBtns">
				<div class="row">
					<div class="col-md-12" align="center">
						<button value="submit" class="btn btn-primary" id="signUpBtn" value="Sign Up">Sign Up</button>
						<a href="/" class="btn btn-default">Cancel</a>
					</div>
				</div>
			</div>
		</form>
	</div>

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script src="/js/gitfit.js"></script>
</body>



</html>