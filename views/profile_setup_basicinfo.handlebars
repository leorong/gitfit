<!doctype html>

<html>
	<head>

		<title>Profile Setup</title>    
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
		<link href="/css/bootstrap.min.css" rel="stylesheet">
		<link href="/css/bootstrap-theme.css" rel="stylesheet">
		<link href="http://fonts.googleapis.com/css?family=Arvo" rel="stylesheet" type="text/css">
		<link href="http://fonts.googleapis.com/css?family=PT+Sans" rel="stylesheet" type="text/css">
		<link href="http://fonts.googleapis.com/css?family=Droid+Sans" rel="stylesheet" type="text/css">
		<link href="/css/gitfit.css" rel="stylesheet">       
	</head>

	<body>
		<div class="container">
			{{#if message}}
				<div class="warning-message">
					<p class="no-margin">{{message}}<p>
				</div>
			{{/if}}
			<form class="profile_setup" role="form" method="post" action="/addbasicinfo">
				<h3>Profile - Basic Info</h3>
				<br>
				<div class="form-group">
					<label>First Name:</label>
					<div class ="row">
						<div class = "col-md-12">
							<input type="text" class="form-control" id="firstname" name ="firstname" placeholder="Bruce" value="{{firstname}}">
						</div>
					</div>
				</div>
				<div class="form-group">
					<label>Last Name:</label>
					<div class="row">
						<div class = "col-md-12">
							<input type="text" class="form-control" id="lastname" name="lastname" placeholder="Wayne" value="{{lastname}}" required>
						</div>
					</div>
				</div>
				<div class="form-group">
					<label>Age:</label>
					<input type="number" class="form-control" id="age" name="age"placeholder="33" value="{{age}}" required>
				</div>
				<div class="form-group">
					<label>City:</label>
					<div class ="row">
						<div class = "col-md-12">
							<input type="text" class="form-control" id="city" name=
							"city" placeholder="Gotham" value="{{city}}" required>
						</div>
					</div>
				</div>
				<div class="form-group">
					<label>State:</label>
					<div class="row">
						<div class = "col-md-12">
							<input type="text" class="form-control" id="state" name="state" placeholder="NY" value="{{state}}" required>
						</div>
					</div>
				</div>
				<div class="form-group">
					<label>About Me:</label>
					<textarea class="form-control" rows="3" id="about_me" name="about_me" placeholder="Write something about yourself..." value="{{about_me}}"></textarea>
				</div>
				<div class="form-group">
					<label>Image URL:</label>
					<input type="text" class="form-control" id="imageURL" name="imageURL" placeholder="http://lorempixel.com/technics/300/300" value="{{imageURL}}">
				</div>
				<div class="form-group">
					<button type="button" class="btn btn-custom btn-small" id="selectImageBtn" data-toggle="modal" data-target="#pictureSelectionModal">Select Image</button>
				</div>

				<!-- Modal -->
				<div class="modal fade" id="pictureSelectionModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
					<div class="modal-dialog">
						<div class="modal-content">
							<div class="modal-header">
								<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
								<h4 class="modal-title" id="myModalLabel">Select a Profile Picture</h4>
							</div>
							<div class="modal-body">
								<div class="col" centered>
									<div class="row-xs-6">
										<div class="input-group">
											<span class="input-group-addon">
												<input type="radio" name="defaultPicture" value="default1.jpg"></input>
											</span>
											<img src="/images/default1.jpg" class="img-thumbnail">
										</div><!-- /input-group -->
									</div><!-- /.col-lg-6 -->
									<div class="row-xs-6">
										<div class="input-group">
											<span class="input-group-addon">
												<input type="radio" name="defaultPicture" value="default2.jpg"></input>
											</span>
											<img src="/images/default2.jpg" class="img-thumbnail">
										</div><!-- /input-group -->
									</div><!-- /.col-lg-6 -->
									<div class="row-xs-6">
										<div class="input-group">
											<span class="input-group-addon">
												<input type="radio" name="defaultPicture" value="default3.jpg"></input>
											</span>
											<img src="/images/default3.jpg" class="img-thumbnail">
										</div><!-- /input-group -->
									</div><!-- /.col-lg-6 -->
								</div><!-- /.row -->
							</div>
							<div class="modal-footer">
								<button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Cancel</button>
								<button type="button" class="btn btn-custom btn-sm" id="selectDefault" data-dismiss="modal">Select</button>
							</div>
						</div>
					</div>
				</div>			

				<div class="form-group">
					<button type="submit" value="Next" class="btn btn-custom" id="addbasicinfo">Next</button>
				</div>
			</form>

		</div>
		<script src="/js/jquery-1.11.0.js"></script>
		<script src="js/bootstrap.js"></script>
		<script src="/js/gitfit.js"></script>
		<script>
			(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
					(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
				m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			})(window,document,'script','//www.google-analytics.com/analytics.js','ga');

			ga('create', 'UA-48615248-1', 'git-fit.herokuapp.com');
			ga('send', 'pageview');
		</script>
	</body>
</html>
